{
  "manifest_version": 3,
  "name": "Slack Helper (Webpack)",
  "version": "1.3",
  "description": "Slack helper extension for thread discussions using Gemini - Webpack Bundled Version",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*.slack.com/*",
    "*://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.slack.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}