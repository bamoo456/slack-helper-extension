{
  "manifest_version": 3,
  "name": "Slack Helper",
  "version": "2.1.1",
  "description": "AI assistant for Slack â€“ summarise threads, refine messages, powered by Gemini & OpenAI models",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.slack.com/*",
    "*://gemini.google.com/*"
  ],
  "optional_host_permissions": [
    "*://api.openai.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.slack.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/locales/zh-TW/translation.json",
        "src/locales/en/translation.json",
        "src/locales/*/*.json",
        "locales/*/*.json",
        "src/message-helper.css",
        "src/llm-service.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}